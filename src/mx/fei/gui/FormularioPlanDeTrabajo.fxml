    </TextField>
    
    <Label text="Objetivo General"
           GridPane.rowIndex="6"
           GridPane.valignment="TOP">
        
        <GridPane.margin>
            <Insets top="10" left="10"/>
        </GridPane.margin>
        
    </Label>
    
    <TextArea fx:id="objetivoGeneral"
              GridPane.rowIndex="6"
              GridPane.columnIndex="1"
              prefWidth="200"
              prefHeight="150"
              wrapText="true">
        
        <GridPane.margin>
            <Insets top="10" left="10"/>
