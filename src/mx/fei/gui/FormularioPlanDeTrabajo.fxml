            <Button fx:id="botonCancelar"
                    text="Cancelar">
                
                <StackPane.margin>
                    <Insets right="80"/>
                </StackPane.margin>
                
            </Button>
            
        </StackPane>
        
        <GridPane.margin>
            <Insets top="25" />
