    </Label>
    
    <TextField fx:id="programaEducativo"
                GridPane.rowIndex="2"
                GridPane.columnIndex="1">
        
        <GridPane.margin>
            <Insets top="10" left="10"/>
        </GridPane.margin>
        
    </TextField>
    
    <Label text="Periodo escolar"
           GridPane.rowIndex="3">
        
        <GridPane.margin>
            <Insets top="10" left="10"/>
