    <DatePicker fx:id="fechaAprobacion"
                GridPane.rowIndex="1"
                GridPane.columnIndex="1">
        
        <GridPane.margin>
            <Insets top="15" left="10"/>
        </GridPane.margin>
        
    </DatePicker>
    
    <Label text="Programa educativo"
           GridPane.rowIndex="2">
        
        <GridPane.margin>
            <Insets top="10" left="10"/>
