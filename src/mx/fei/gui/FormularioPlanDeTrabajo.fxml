    </TextField>
    
    <Label text="Nombre de la academia"
           GridPane.rowIndex="4">
        
        <GridPane.margin>
            <Insets top="10" left="10"/>
        </GridPane.margin>
        
    </Label>
    
    <TextField fx:id="nombreAcademia"
                GridPane.rowIndex="4"
